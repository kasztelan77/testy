extends ../layout

block content
    h1.
         #{title}
    ul
        - each category, i in categories
            li
                = category.name
                = ";\t subcategories: "
                = category.subcategories
                p
                form(action='/categories/#{category._id}',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Show
                form(action='/categories/#{category._id}/edit',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Edit
                form(action='/categories/#{category._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
    form(action='/categories/new',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Add a new category