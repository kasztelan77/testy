extends ../layout

block content
    h1.
        User ID #{user._id}
    form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
        p User name: 
            input#inputName(type='text', value='#{user.name}', name='name')
        p Email:
            input#inputEmail(type='text', value='#{user.email}', name='email')
        p Groups:
            input#inputEmail(type='text', value='#{user.groups}')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
    p
    form(action='/users/',method='get',enctype='application/x-www-form-urlencoded')
        button(type='submit').
            Back to all