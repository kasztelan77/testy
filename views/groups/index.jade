extends ../layout

block content
    h1.
         #{title}
    ul
        - each group, i in groups
            li
                = group.name
                = ";\t owner: "
                = group.owner
                = ";\t users: "
                = group.users
                p
                form(action='/groups/#{group._id}',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Show
                form(action='/groups/#{group._id}/edit',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Edit
                form(action='/groups/#{group._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
    form(action='/groups/new',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Add a new group