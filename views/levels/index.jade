extends ../layout

block content
    h1.
         #{title}
    ul
        - each level, i in levels
            li
                = level.name
                = ";\t equivalent_levels: "
                = level.equivalent_levels
                p
                form(action='/levels/#{level.id}',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Show
                form(action='/levels/#{level.id}/edit',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Edit
                form(action='/levels/#{level.id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
    form(action='/levels/new',method='get',enctype='application/x-www-form-urlencoded')
                    button(type='submit').
                        Add a new level
    p.
    a(href='/')
        button.btn.btn-primary(type="button") Main page